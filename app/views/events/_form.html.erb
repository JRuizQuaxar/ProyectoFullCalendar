<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="nombreEditar">
    <%= form.label :Nombre %>
    <%= form.text_field :name %>
  </div>

  <div class="apellidoEditar">
    <%= form.label :Apellidos %>
    <%= form.text_field :lastname %>
  </div>

  <div class="descripcionEditar">
    <%= form.label :Descripción %>
    <%= form.text_field :description %>
  </div>

  <div class="fechaIEditar">
    <%= form.label :Fecha_hora_inicio %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="fechaTEditar">
    <%= form.label :Fecha_hora_término %>
    <%= form.datetime_select :end_date %>
  </div>

  <div class="botonesEditar">
    <%= form.submit %>
  </div>
<% end %>
